{
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "ignorePatterns": ["template-**"],
  "rules": {
    "no-undef": "off",
    "no-missing-import": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
  }
}